generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User model for authentication
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation to roles
  role      Role?
  transactions Transaction[] @relation("UserTransactions")

  // Link to Member profile (optional)
  member    Member?

  @@index([email])
}

// Role model for access control
model Role {
  id        String   @id @default(cuid())
  userId    String   @unique
  roleName  String   // "pengurus" or empty (member)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Transaction model
model Transaction {
  id              String    @id @default(cuid())
  tanggalTransaksi DateTime // Transaction date
  jenis           String    // "penerimaan" or "pengeluaran"
  nilai           Int       // Value (max 9 digits, no decimals)
  kategori        String    // "iuran anggota", "operasional", "asset", "lainnya"
  catatan         String?   // Optional notes
  isDeleted       Boolean   @default(false) // Soft delete flag
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  createdBy       String   // User ID who created the record (immutable)
  updatedBy       String?  // User ID who last updated the record

  user            User      @relation("UserTransactions", fields: [createdBy], references: [id])

  @@index([tanggalTransaksi])
  @@index([isDeleted])
  @@index([createdBy])
}

// Member model
model Member {
  id                String    @id @default(cuid())
  name              String
  email             String?   // Optional contact email
  statusKeanggotaan String    // "aktif", "non-aktif"
  joinedAt          DateTime  @default(now())
  
  // Optional link to User account
  userId            String?   @unique
  user              User?     @relation(fields: [userId], references: [id])

  dues              DuesStatus[]

  @@index([statusKeanggotaan])
}

// Dues Status (Ledger Iuran)
model DuesStatus {
  id          String   @id @default(cuid())
  memberId    String
  year        Int
  month       Int      // 1-12
  status      String   // "lunas", "belum"
  nilaiIuran  Int      @default(0)
  updatedAt   DateTime @updatedAt
  updatedBy   String?  // Name or ID of the updater

  member      Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)

  @@unique([memberId, year, month])
  @@index([year, month])
}

// Court Schedule
model CourtSchedule {
  id          String   @id @default(cuid())
  dayOfWeek   Int      // 1=Monday, 7=Sunday
  timeSlot    String   // "Pagi", "Sore", "Malam"
  status      String   // "vacant", "occupied", "canceled"
  userName    String?  // Name of the booker
  contact     String?  // Optional contact info
  updatedAt   DateTime @updatedAt
  updatedBy   String?  // Name or ID of the updater

  @@unique([dayOfWeek, timeSlot])
}