// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================
// User model for authentication (Legacy)
// Note: Profile table for Supabase Auth is managed via SQL
// ============================================
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  role      Role?    @relation("LegacyUserRole")
  transactions Transaction[] @relation("UserTransactions")
  member    Member?  @relation("LegacyUserMember")

  @@index([email])
}

// ============================================
// Role model - assigns permissions to users
// ============================================
model Role {
  id        String   @id @default(cuid())
  userId    String?  @unique
  profileId String?  @unique @db.Uuid
  roleName  String   // "pengurus" or "anggota"

  user      User?    @relation("LegacyUserRole", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([profileId])
}

// ============================================
// Transaction model
// ============================================
model Transaction {
  id              String    @id @default(cuid())
  tanggalTransaksi DateTime
  jenis           String    // "penerimaan" or "pengeluaran"
  nilai           Int
  kategori        String    // "iuran anggota", "operasional", "asset", "lainnya"
  catatan         String?
  isDeleted       Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Created by (legacy User)
  createdBy       String?
  createdByUser   User?     @relation("UserTransactions", fields: [createdBy], references: [id])
  
  // Created by (Supabase Auth Profile) - column exists in DB
  createdByProfileId String? @db.Uuid

  @@index([tanggalTransaksi])
  @@index([jenis])
  @@index([createdBy])
  @@index([createdByProfileId])
}

// ============================================
// Member model
// ============================================
model Member {
  id                String    @id @default(cuid())
  name              String
  email             String    @unique
  statusKeanggotaan String    // "aktif", "non-aktif"
  joinedAt          DateTime  @default(now())
  defaultIuran      Int       @default(25000)

  // Legacy link to User account
  userId            String?   @unique
  user              User?     @relation("LegacyUserMember", fields: [userId], references: [id])

  // Profile link for Supabase Auth (column exists in DB)
  profileId         String?   @unique @db.Uuid

  dues              DuesStatus[]

  @@index([statusKeanggotaan])
  @@index([email])
  @@index([profileId])
}

// ============================================
// DuesStatus model (Ledger Iuran)
// ============================================
model DuesStatus {
  id          String   @id @default(cuid())
  memberId    String
  year        Int
  month       Int      // 1-12
  status      String   // "lunas", "belum"
  nilaiIuran  Int      @default(0)
  updatedAt   DateTime @updatedAt
  updatedBy   String?

  member      Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)

  @@unique([memberId, year, month])
  @@index([year, month])
}

// ============================================
// CourtSchedule model
// ============================================
model CourtSchedule {
  id          String   @id @default(cuid())
  dayOfWeek   Int      // 1=Monday, 7=Sunday
  timeSlot    String   // "pagi", "sore", "malam"
  status      String   // "vacant", "occupied", "canceled"
  userName    String?
  contact     String?
  updatedAt   DateTime @updatedAt
  updatedBy   String?

  @@unique([dayOfWeek, timeSlot])
}